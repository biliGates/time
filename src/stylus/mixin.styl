$border-1px($color, top)
  position relative
  &:after
    content ''
    position absolute
    display block
    width 100%
    height 1px
    left 0
    background $color 
    transform scaleY(0.5)
    if top
      top 0
    else 
      bottom 0


// 需要显示省略的的元素需要有 ellipsis class
$ellipsis()
  overflow hidden
  .ellipsis
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
